      "name":"Nadeem Shabir",
      "email": "ns@talis.com",
      "homepage":"http://engineering.talis.com"
    }
  ],
  "require":{
    "php": ">=5.3.0",
    "monolog/monolog": ">=1.13.1",
    "predis/predis"  : "v0.8.5",
    "domnikl/statsd": ">=1.0.2",
    "psr/log" : ">=1.0.0",
    "firebase/php-jwt": "3.0.0"
  },
  "require-dev":{
    "phpunit/phpunit": "4.2.0"
  },
  "autoload":{
    "psr-0": {
